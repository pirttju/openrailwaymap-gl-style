{
  "version": 8,
  "name": "ORM standard",
  "metadata": {"maputnik:renderer": "mbgljs", "openmaptiles:version": "3.x"},
  "sources": {
    "openmaptiles-railway": {
      "type": "vector",
      "url": "https://raiteilla.fi/tiles/data/v3.json"
    }
  },
  "sprite": "",
  "glyphs": "https://raiteilla.fi/tiles/fonts/{fontstack}/{range}.pbf?key={key}",
  "layers": [
    {
      "id": "bridges",
      "type": "line",
      "source": "openmaptiles-railway",
      "source-layer": "railway",
      "minzoom": 10,
      "filter": ["all", ["==", "brunnel", "bridge"]],
      "paint": {"line-gap-width": 3.5, "line-color": "#797979"}
    },
    {
      "id": "casing-historic",
      "type": "line",
      "source": "openmaptiles-railway",
      "source-layer": "railway",
      "minzoom": 9,
      "filter": [
        "any",
        ["==", "subclass", "disused"],
        ["==", "subclass", "abandoned"],
        ["==", "subclass", "razed"]
      ],
      "paint": {
        "line-gap-width": 1,
        "line-width": 0.8,
        "line-color": "#000000",
        "line-opacity": 0.2
      }
    },
    {
      "id": "tunnels",
      "type": "line",
      "source": "openmaptiles-railway",
      "source-layer": "railway",
      "minzoom": 10,
      "filter": ["all", ["==", "brunnel", "tunnel"]],
      "layout": {"line-cap": "butt"},
      "paint": {"line-width": 6, "line-color": "#ffffff", "line-opacity": 0.6}
    },
    {
      "id": "railways",
      "type": "line",
      "source": "openmaptiles-railway",
      "source-layer": "railway",
      "filter": ["all", ["!", ["has", "usage"]], ["!", ["has", "service"]]],
      "layout": {"visibility": "visible"},
      "paint": {"line-color": "#000000"}
    },
    {
      "id": "railways-branch",
      "type": "line",
      "source": "openmaptiles-railway",
      "source-layer": "railway",
      "filter": [
        "all",
        ["==", ["get", "usage"], "branch"],
        ["!", ["has", "service"]]
      ],
      "paint": {"line-color": "#DACA00"}
    },
    {
      "id": "railways-main",
      "type": "line",
      "source": "openmaptiles-railway",
      "source-layer": "railway",
      "filter": [
        "all",
        ["==", ["get", "usage"], "main"],
        ["!", ["has", "service"]]
      ],
      "paint": {"line-color": "#FF8100"}
    },
    {
      "id": "railways-highspeed",
      "type": "line",
      "source": "openmaptiles-railway",
      "source-layer": "railway",
      "filter": [
        "all",
        ["==", ["get", "usage"], "main"],
        ["==", ["get", "highspeed"], "yes"],
        ["!", ["has", "service"]]
      ],
      "paint": {"line-color": "#FF0C00"}
    },
    {
      "id": "railways-industrial",
      "type": "line",
      "source": "openmaptiles-railway",
      "source-layer": "railway",
      "filter": ["all", ["==", "usage", "industrial"]],
      "paint": {"line-color": "#87491D"}
    },
    {
      "id": "tracks-spur",
      "type": "line",
      "source": "openmaptiles-railway",
      "source-layer": "railway",
      "filter": [
        "all",
        ["==", ["get", "service"], "spur"],
        ["!", ["has", "usage"]]
      ],
      "layout": {"visibility": "visible"},
      "paint": {"line-color": "#87491D"}
    },
    {
      "id": "tracks-light-rail",
      "type": "line",
      "source": "openmaptiles-railway",
      "source-layer": "railway",
      "filter": ["all", ["==", "subclass", "light_rail"]],
      "paint": {"line-color": "#00BD14"}
    },
    {
      "id": "tracks-subway",
      "type": "line",
      "source": "openmaptiles-railway",
      "source-layer": "railway",
      "filter": ["all", ["==", "subclass", "subway"]],
      "paint": {"line-color": "#0300C3"}
    },
    {
      "id": "tracks-tram",
      "type": "line",
      "source": "openmaptiles-railway",
      "source-layer": "railway",
      "filter": ["all", ["==", "subclass", "tram"]],
      "paint": {"line-color": "#D877B8"}
    },
    {
      "id": "tracks-siding",
      "type": "line",
      "source": "openmaptiles-railway",
      "source-layer": "railway",
      "minzoom": 10,
      "filter": [
        "all",
        ["==", ["get", "subclass"], "rail"],
        ["==", ["get", "service"], "siding"],
        ["!", ["has", "usage"]]
      ],
      "layout": {"visibility": "visible"},
      "paint": {"line-width": 2}
    },
    {
      "id": "tracks-yard",
      "type": "line",
      "source": "openmaptiles-railway",
      "source-layer": "railway",
      "minzoom": 10,
      "filter": [
        "all",
        ["==", ["get", "subclass"], "rail"],
        ["==", ["get", "service"], "yard"],
        ["!", ["has", "usage"]]
      ],
      "layout": {"visibility": "visible"},
      "paint": {"line-width": 1.5}
    },
    {
      "id": "tracks-crossover",
      "type": "line",
      "source": "openmaptiles-railway",
      "source-layer": "railway",
      "minzoom": 10,
      "filter": [
        "all",
        ["==", ["get", "subclass"], "rail"],
        ["==", ["get", "service"], "crossover"],
        ["!", ["has", "usage"]]
      ],
      "layout": {"visibility": "visible"},
      "paint": {"line-width": 1}
    },
    {
      "id": "track_refs",
      "type": "symbol",
      "source": "openmaptiles-railway",
      "source-layer": "railway",
      "minzoom": 17,
      "filter": ["all"],
      "layout": {
        "text-field": "{track_ref}",
        "symbol-placement": "line",
        "text-font": ["Noto Sans Bold"],
        "text-size": 11
      },
      "paint": {
        "icon-halo-width": 4,
        "text-halo-color": "rgba(0, 0, 255, 1)",
        "text-color": "#FFFFFF",
        "text-halo-width": 4
      }
    },
    {
      "id": "switches",
      "type": "symbol",
      "source": "openmaptiles-railway",
      "source-layer": "railway_poi",
      "minzoom": 16,
      "filter": [
        "all",
        ["==", "class", "switch"],
        ["!=", "local_operated", true],
        ["!=", "resetting", true]
      ],
      "layout": {
        "text-field": "{ref}",
        "text-size": 11,
        "text-font": ["Noto Sans Bold"]
      },
      "paint": {
        "text-color": "#000000",
        "text-halo-width": 2,
        "text-halo-color": "#FFFFFF"
      }
    },
    {
      "id": "switches-local-operated-copy",
      "type": "symbol",
      "source": "openmaptiles-railway",
      "source-layer": "railway_poi",
      "minzoom": 16,
      "filter": [
        "all",
        ["==", "class", "switch"],
        ["==", "local_operated", true]
      ],
      "layout": {
        "text-field": "{ref}",
        "text-size": 11,
        "text-font": ["Noto Sans Bold"]
      },
      "paint": {
        "text-color": "#000000",
        "text-halo-width": 2,
        "text-halo-color": "#FFFF00"
      }
    },
    {
      "id": "switches-resetting",
      "type": "symbol",
      "source": "openmaptiles-railway",
      "source-layer": "railway_poi",
      "minzoom": 16,
      "filter": ["all", ["==", "class", "switch"], ["==", "resetting", true]],
      "layout": {
        "text-field": "{ref}",
        "text-size": 11,
        "text-font": ["Noto Sans Bold"]
      },
      "paint": {
        "text-color": "#000000",
        "text-halo-width": 2,
        "text-halo-color": "#FF8000"
      }
    },
    {
      "id": "milestones",
      "type": "symbol",
      "source": "openmaptiles-railway",
      "source-layer": "railway_poi",
      "minzoom": 11,
      "filter": ["all", ["==", "class", "milestone"]],
      "layout": {
        "text-field": "{railway_position}",
        "text-size": 11,
        "text-font": ["Noto Sans Bold"]
      },
      "paint": {
        "text-color": "#000000",
        "text-halo-width": 0.5,
        "text-halo-color": "#FFFFFF"
      }
    },
    {
      "id": "level-crossings",
      "type": "circle",
      "source": "openmaptiles-railway",
      "source-layer": "railway_poi",
      "minzoom": 14,
      "filter": ["all", ["==", "class", "level_crossing"]],
      "paint": {"circle-radius": 4}
    },
    {
      "id": "footway-crossings",
      "type": "circle",
      "source": "openmaptiles-railway",
      "source-layer": "railway_poi",
      "minzoom": 14,
      "filter": ["all", ["==", "class", "crossing"]],
      "paint": {"circle-radius": 4}
    },
    {
      "id": "stations-z8-z10",
      "type": "symbol",
      "source": "openmaptiles-railway",
      "source-layer": "railway_poi",
      "minzoom": 8,
      "maxzoom": 11,
      "filter": ["all", ["==", "class", "station"]],
      "layout": {
        "text-field": "{ref}",
        "text-font": ["Noto Sans Bold"],
        "text-size": 12
      }
    },
    {
      "id": "stations-z11",
      "type": "symbol",
      "source": "openmaptiles-railway",
      "source-layer": "railway_poi",
      "minzoom": 11,
      "maxzoom": 24,
      "filter": ["all", ["==", "class", "station"]],
      "layout": {
        "text-field": "{name}",
        "text-font": ["Noto Sans Bold"],
        "text-size": 12
      }
    }
  ],
  "id": "orm-standard"
}